{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.stacspec.org/v1.0.0-beta.1/extensions/checksum/schema.json#",
  "title": "Checksum Extension Specification",
  "description": "STAC Checksum Extension to a STAC Item",
  "oneOf": [
    {
      "allOf": [
        {
          "$ref": "https://schemas.stacspec.org/v1.0.0-beta.1/item-spec/item.json"
        },
        {
          "$ref": "#/definitions/stac_extensions"
        },
        {
          "$ref": "#/definitions/checksum_links"
        },
        {
          "$ref": "#/definitions/checksum_assets"
        }
      ]
    },
    {
      "allOf": [
        {
          "$ref": "https://schemas.stacspec.org/v1.0.0-beta.1/catalog-spec/catalog.json"
        },
        {
          "$ref": "#/definitions/stac_extensions"
        },
        {
          "$ref": "#/definitions/checksum_links"
        }
      ]
    },
    {
      "allOf": [
        {
          "$ref": "https://schemas.stacspec.org/v1.0.0-beta.1/collection-spec/collection.json"
        },
        {
          "$ref": "#/definitions/stac_extensions"
        },
        {
          "$ref": "#/definitions/checksum_links"
        },
        {
          "$ref": "#/definitions/checksum_assets"
        }
      ]
    }
  ],
  "definitions": {
    "stac_extensions": {
      "type": "object",
      "required": [
        "stac_extensions"
      ],
      "properties": {
        "stac_extensions": {
          "type": "array",
          "contains": {
            "enum": [
              "checksum",
              "https://schemas.stacspec.org/v1.0.0-beta.1/extensions/checksum/schema.json"
            ]
          }
        }
      }
    },
    "checksum_links": {
      "type": "object",
      "properties": {
        "links": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/checksums"
          }
        }
      }
    },
    "checksum_assets": {
      "type": "object",
      "properties": {
        "assets": {
          "type": "object",
          "patternProperties": {
            ".+": {
              "$ref": "#/definitions/checksums"
            }
          }
        }
      }
    },
    "checksums": {
      "type": "object",
      "properties": {
        "checksum:multihash": {
          "type": "string",
          "pattern": "^[a-f0-9]+$",
          "title": "Multihash"
        }
      }
    }
  }
}
