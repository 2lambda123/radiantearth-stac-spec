{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "stac-extension-single-item.json#",
  "type": "object", 
  "title": "Single Item Extension",
  "allOf": [
    {
      "$ref": "https://raw.githubusercontent.com/radiantearth/stac-spec/master/item-spec/json-schema/item.json#/definitions/core"
    },
    {
      "$ref": "#/definitions/single-item"
    }
  ],
  "definitions": {
    "single-item": {
      "type": "object",
      "required": [
        "properties"
      ],
      "properties": {
        "properties": {
          "type": "object",
          "properties": {
            "item:license": {
              "title": "Item Licenses",
              "type": "string"
            },
            "item:providers": {
              "type": "array",
              "items": {
                "properties": {
                  "name": {
                    "title": "Organization name",
                    "type": "string"
                  },
                  "description": {
                    "title": "Provider description",
                    "type": "string"
                  },
                  "roles": {
                    "title": "Organization roles",
                    "type": "array",
                    "items": {
                      "type": "string",
                      "enum": [
                        "producer",
                        "licensor",
                        "processor",
                        "host"
                      ]
                    }
                  },
                  "url": {
                    "title": "Homepage",
                    "type": "string",
                    "format": "url"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}