{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.stacspec.org/v1.0.0-beta.1/extensions/single-file-stac/schema.json#",
  "title": "Single File STAC Extension",
  "description": "Single File STAC Extension to combine Collections and Items in single file catalog",
  "allOf": [
    {
      "$ref": "https://schemas.stacspec.org/v1.0.0-beta.1/catalog-spec/catalog.json"
    },
    {
      "$ref": "https://geojson.org/schema/FeatureCollection.json"
    },
    {
      "$ref": "#/definitions/single-file-stac"
    }
  ],
  "definitions": {
    "single-file-stac": {
      "type": "object",
      "required": [
        "stac_extensions",
        "features"
      ],
      "properties": {
        "stac_extensions": {
          "type": "array",
          "contains": {
            "enum": [
              "single-file-stac",
              "https://schemas.stacspec.org/v1.0.0-beta.1/extensions/single-file-stac/schema.json"
            ]
          }
        },
        "collections": {
          "type": "array",
          "items": {
            "$ref": "https://schemas.stacspec.org/v1.0.0-beta.1/collection-spec/collection.json"
          }
        },
        "features": {
          "type": "array",
          "items": {
            "$ref": "https://schemas.stacspec.org/v1.0.0-beta.1/item-spec/item.json"
          }
        }
      }
    }
  }
}