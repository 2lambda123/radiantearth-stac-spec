            "instruments"
          ],
          "properties": {
            "platform": {
              "title": "Platform",
              "type": "string"
            },
            "instruments": {
              "title": "Instruments",
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "constellation": {
              "title": "Constellation",
              "type": "string"
            },
            "mission": {
              "title": "Mission",
              "type": "string"
            }
          }
        }
      }
    }
  }
