{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "id": "schema.json#",
    "type": "object", 
    "title": "STAC Training Data Extension Spec",
    "properties": {
      "properties": {
        "type": "object",
        "required": [
          "label:description",
          "label:classes",
          "label:label_type"
        ],
        "properties": {
          "label:description": {
            "title": "Description",
            "type": "string"
          }, 
          "label:classes": {
            "title": "Classes",
            "type": "array",
            "items": {
                "type": "string"
            }
          },
          "label:label_type": {
            "title": "Label type",
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "classification",
                "detection",
                "segmentation"
              ]
            }
          },
          "label:label_property": {
            "title": "Label property name",
            "type": "string"
          }
        }
      }
    }
  }